%div{id: dom_id(post), class: "root-stream-element"}
  %div.post-sub-headline
    = render "streams/stream_post_author", author: post.author, created_at: post.created_at, type: type
  %div{class: classify(post.type)}
    = render "streams/attached_photos", post: post if post.photos.exists?
    = post.rendered_message.html_safe
    = render "streams/oembed", post: post
    = render "streams/opengraph", post: post
